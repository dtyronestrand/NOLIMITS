root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{php,js,css,less,scss,sass,json,xml,html}]
indent_style = tab
indent_size = 4

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[{*.{rst,rb,yml},package.json}]
indent_style = space
indent_size = 2

[**/{_variables,_global_variables}/*.html]
insert_final_newline = false
